{
  "directories": [
    {
      "path": "./docs/ADRs",
      "name": "Architecture Decision Records",
      "file_pattern": "\\.md$"
    },
    {
      "path": "./src/modules",
      "name": "Modules",
      "file_pattern": "^(?i)(readme\\.md)$"
    }
  ],
  "port": "8090",
  "title": "Documentation Browser",
  "ignore_patterns": [
    ".*/node_modules/.*",
    ".*/\\.git/.*",
    ".*/vendor/.*",
    ".*/build/.*",
    ".*/dist/.*"
  ],
  "embeddings": {
    "enabled": true,
    "provider": "openai",
    "model": "text-embedding-3-large",
    "api_key": "${OPENAI_API_KEY}",
    "db_path": "embeddings.db"
  },
  "mcp": {
    "enabled": true,
    "transport": "stdio"
  }
}
